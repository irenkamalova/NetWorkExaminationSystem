<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <application>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/resources/messages</base-name>
            <var>messages</var>
        </resource-bundle>
<!--      it's my addition                 -->
        <navigationrule>
            <fromviewid>/index.xhtml</fromviewid>
            <navigationcase>
                <fromoutcome>success</fromoutcome>
                <toviewid>/autorisation/success.xhtml</toviewid>
            </navigationcase>
        </navigationrule>
<!--      end of my addition                 -->  
<!--        loggout                         -->
        <navigationrule>
            <navigationcase>
                <fromoutcome>logout</fromoutcome>
                <toviewid>/loggedOut.xhtml</toviewid>
            </navigationcase>
        </navigationrule>   
<!--            end of loggout              -->
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
</faces-config>
